<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zed.androidqq.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <android.support.v4.view.ViewPager
        android:layout_gravity="center_vertical"
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_weight="26"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
    <!--设置字体样式 tabTextAppearance-->
    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/myTabTextAppearance"
        android:id="@+id/tabLayout_main"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem_msg"
            android:text="消息"

            android:padding="20dp"
            android:icon="@drawable/skin_tab_msg_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TabItem
            android:id="@+id/tabItem_contact"
            android:text="联系人"

            android:icon="@drawable/skin_tab_contact_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TabItem
            android:id="@+id/tabItem_zone"
            android:text="空间"
            android:icon="@drawable/skin_tab_qzone_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TabLayout>

</LinearLayout>
